<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="20dp"
    tools:context=".Fragments.ConstraintsFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/Fragment_Constraints_TopTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Week :"
        android:textSize="40dp"
        android:fontFamily="@font/font_title_bold"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/Fragment_Constraints_CardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/brown_buttons"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toTopOf="@id/Fragment_Constraints_SubmitBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Fragment_Constraints_TopTitle">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Day"
                        android:textSize="20dp"
                        android:fontFamily="@font/font_title_bold"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Morning"
                        android:textSize="20dp"
                        android:fontFamily="@font/font_title_bold"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Evening"
                        android:textSize="20dp"
                        android:fontFamily="@font/font_title_bold"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Night"
                        android:textSize="20dp"
                        android:fontFamily="@font/font_title_bold"
                        android:gravity="center"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sunday           "
                        android:textSize="20dp"
                        android:fontFamily="@font/font_title_bold"
                        android:layout_weight="1"
                        android:gravity="center"/>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/Fragment_Constraints_CheckBox_Sunday_Morning"
                        style="@style/Widget.Material3.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:buttonTint="@color/black" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/Fragment_Constartins_CheckBox_Sunday_Evening"
                        style="@style/Widget.Material3.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:buttonTint="@color/black" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/Fragment_Constraints_CheckBox_Sunday_Night"
                        style="@style/Widget.Material3.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:buttonTint="@color/black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monday         "
                        android:textSize="20dp"
                        android:fontFamily="@font/font_title_bold"
                        android:layout_weight="1"
                        android:gravity="center"/>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/Fragment_Constraints_CheckBox_Monday_Morning"
                        style="@style/Widget.Material3.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:buttonTint="@color/black" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/Fragment_Constartins_CheckBox_Monday_Evening"
                        style="@style/Widget.Material3.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:buttonTint="@color/black" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/Fragment_Constraints_CheckBox_Monday_Night"
                        style="@style/Widget.Material3.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:buttonTint="@color/black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tuesday         "
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:fontFamily="@font/font_title_bold"
                        android:gravity="center"/>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/Fragment_Constraints_CheckBox_Tuesday_Morning"
                        style="@style/Widget.Material3.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:buttonTint="@color/black" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/Fragment_Constraints_CheckBox_Tuesday_Evening"
                        style="@style/Widget.Material3.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:buttonTint="@color/black" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/Fragment_Constraints_CheckBox_Tuesday_Night"
                        style="@style/Widget.Material3.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:buttonTint="@color/black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wednesday"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:fontFamily="@font/font_title_bold"
                        android:gravity="center"/>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/Fragment_Constraints_CheckBox_Wednesday_Morning"
                        style="@style/Widget.Material3.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:buttonTint="@color/black" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/Fragment_Constraints_CheckBox_Wednesday_Evening"
                        style="@style/Widget.Material3.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:buttonTint="@color/black" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/Fragment_Constraints_CheckBox_Wednesday_Night"
                        style="@style/Widget.Material3.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:buttonTint="@color/black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thursday     "
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:fontFamily="@font/font_title_bold"
                        android:gravity="center"/>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/Fragment_Constraints_CheckBox_Thursday_Morning"
                        style="@style/Widget.Material3.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:buttonTint="@color/black" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/Fragment_Constraints_CheckBox_Thursday_Evening"
                        style="@style/Widget.Material3.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:buttonTint="@color/black" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/Fragment_Constraints_CheckBox_Thursday_Night"
                        style="@style/Widget.Material3.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:buttonTint="@color/black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friday             "
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:fontFamily="@font/font_title_bold"
                        android:gravity="center"/>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/Fragment_Constraints_CheckBox_Friday_Morning"
                        style="@style/Widget.Material3.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:buttonTint="@color/black" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/Fragment_Constraints_CheckBox_Friday_Evening"
                        style="@style/Widget.Material3.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:buttonTint="@color/black" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/Fragment_Constraints_CheckBox_Friday_Night"
                        style="@style/Widget.Material3.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:buttonTint="@color/black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saturday      "
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:fontFamily="@font/font_title_bold"
                        android:gravity="center"/>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/Fragment_Constraints_CheckBox_Saturday_Morning"
                        style="@style/Widget.Material3.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:buttonTint="@color/black" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/Fragment_Constraints_CheckBox_Saturday_Evening"
                        style="@style/Widget.Material3.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:buttonTint="@color/black" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/Fragment_Constraints_CheckBox_Saturday_Night"
                        style="@style/Widget.Material3.CompoundButton.CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:buttonTint="@color/black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/Fragment_Constraints_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_title_bold"
        android:text="No Constraints Yet"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Fragment_Constraints_SubmitBtn"
        style="@style/ThemeOverlay.Material3.Button.ElevatedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/brown_buttons"
        android:fontFamily="@font/font_title_bold"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>