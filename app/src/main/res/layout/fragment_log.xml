<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.LogFragment">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/Fragment_Log_BtnCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="200dp"
            android:backgroundTint="@color/brown_buttons"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:padding="20dp">

                <Button
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:id="@+id/Fragment_Log_LogInBtn"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginEnd="10dp"
                    android:text="Log In"
                    android:textSize="30sp"
                    android:fontFamily="@font/font_title_bold"
                    android:elevation="10dp"
                    android:backgroundTint="@color/dark_gray"/>
                <Button
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:id="@+id/Fragment_Log_LogOutBtn"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:text="Log Out"
                    android:textSize="30sp"
                    android:fontFamily="@font/font_title_bold"
                    android:elevation="10dp"
                    android:backgroundTint="@color/dark_gray"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>



        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/brown_buttons"
            android:layout_marginVertical="30dp"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@id/Fragment_Log_BtnCardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/Fragment_Log_LastLogTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:text="last log"
                android:textSize="20sp"
                android:padding="30dp"
                android:textColor="@color/white"
                android:fontFamily="@font/font_title_bold"/>
        </com.google.android.material.card.MaterialCardView>





</androidx.constraintlayout.widget.ConstraintLayout>