<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.LogFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <Button
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:id="@+id/Fragment_Log_LogInBtn"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginVertical="30dp"
            android:text="Log In"
            android:textSize="30sp"
            android:fontFamily="@font/font_title_bold"
            android:elevation="10dp"
            android:backgroundTint="@color/brown_buttons"/>
        <Button
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:id="@+id/Fragment_Log_LogOutBtn"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="Log Out"
            android:textSize="30sp"
            android:fontFamily="@font/font_title_bold"
            android:elevation="10dp"
            android:backgroundTint="@color/brown_buttons"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/brown_buttons"
            android:layout_marginVertical="30dp">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/Fragment_Log_LastLogTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:text="last log"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/font_title_bold"/>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>